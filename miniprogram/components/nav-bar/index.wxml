<view class="lxy-nav-bar {{extClass}}" style="background: {{backgroundColorTop}};height: {{customHeight === -1 ? navBarHeight+ navBarExtendHeight : ( customHeight !==0 ? navBarHeight+ navBarExtendHeight+ 38 : 0) }}px;">
	<view class="lxy-nav-bar__placeholder {{ios ? 'ios' : 'android'}}" style="padding-top: {{navBarHeight+ navBarExtendHeight}}px;visibility: hidden;"></view>
	<view class="lxy-nav-bar__inner {{ios ? 'ios' : 'android'}}" style="{{navigationbarinnerStyle}}{{displayStyle}}">
		<view class="lxy-nav-bar__left {{_back&&home ? 'meanwhile' : _back&&!home ? 'back' : 'home' }} {{ title ? 'is_title' : '' }}" style="{{navBarLeft}}">
			<block wx:if="{{_back&&!home}}">
				<view bind:tap="back" class="icon-zuojiantou iconfont lxy-nav-bar__button lxy-nav-bar__btn_goback {{iconTheme}}">
				</view>
			</block>
			<block wx:if="{{!_back&&home}}">
				<view bind:tap="home" class="icon-my-home iconfont lxy-nav-bar__button lxy-nav-bar__btn_gohome border {{iconTheme}} {{ios ? 'ios' : 'android'}}">
				</view>
			</block>
			<block wx:elif="{{_back&&home}}">
				<view class="lxy-nav-bar__buttons {{ios ? 'ios' : 'android'}}">
					<view bindtap="back" class="icon-zuojiantou iconfont lxy-nav-bar__button lxy-nav-bar__btn_goback {{iconTheme}}"></view>
					<view bindtap="home" class="icon-my-home iconfont lxy-nav-bar__button lxy-nav-bar__btn_gohome {{iconTheme}}"></view>
				</view>
			</block>
			<block wx:else>
				<slot name="left"></slot>
			</block>
		</view>
		<view class='lxy-nav-bar__center title-class'>
			<block wx:if="{{title}}">
        <view wx:if="{{!titLoading}}" class='lxy-nav-bar__center-title'>{{title}}</view>
        <view wx:else class="spinner">
          <view class="three-bounce">
            <view class="one"></view>
            <view class="two"></view>
            <view class="three"></view>
          </view>
        </view>
			</block>
			<block wx:else>
				<slot name="center"></slot>
			</block>
		</view>
	</view>
</view>

