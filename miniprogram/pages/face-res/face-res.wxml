  <view class="face-res-title">
    <view class="title">{{title}}</view>
  </view>
  <view class="face-res-content" wx:if="{{!loading}}">
    <view class="tag-wrapper">
      <text>介绍</text>
    </view>
    <view class="content">
      <htmltowxml wx:if="{{content}}" linenums="{{false}}" highlightStyle="dracula" showLoading="{{true}}" text="{{content}}" />
    </view>
  </view>
  <view class="loading" wx:else>
    <loading color="#7e68f3"></loading><text>加载中...</text>
  </view>
