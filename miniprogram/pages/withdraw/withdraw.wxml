<view class="withdraw-container">
  <view class="withdraw-card">
    <view class="card card1">
      <view class="text">
        <text class="title">剩余金额 (元)</text>
        <text class="price"><text class="symbol">￥</text>{{userInfo.amount}}</text>
      </view>
      <view class="icon-wrap">
        <text class="iconfont icon-shengyujine"></text>
      </view>
    </view>
    <view class="card card2">
      <view class="text">
        <text class="title">总收益 (元)</text>
        <text class="price"><text class="symbol">￥</text>{{totalAmount}}</text>
      </view>
      <view class="icon-wrap">
        <text class="iconfont icon-hexiaojine"></text>
      </view>
    </view>
  </view>
  <view class="content">
    <view class="withdraw-list" wx:if="{{cashList.length}}">
      <view class="withdraw-item" wx:for="{{cashList}}" wx:key="index">
        <view class="title">
          <text class="price">+{{item.price}}</text>
          <text class="shouru">收入</text>
        </view>
        <view class="status">
          <text class="blue" wx:if="{{item.state === 0}}">提现中</text>
          <text class="green" wx:if="{{item.state === 1}}">提现成功</text>
          <text class="red" wx:if="{{item.state === 2}}">提现失败</text>
          <text class="create_time">{{item.create_time}}</text>
        </view>
      </view>
    </view>
    <more-wrap loading="{{loading}}" noMore="{{noMore}}" moreText="{{moreText}}"></more-wrap>
  </view>
  <view class="withdraw-btn">
    <view class="placeholder"></view>
    <view class="btn" bindtap="withdraw">提现申请</view>
  </view>
</view>