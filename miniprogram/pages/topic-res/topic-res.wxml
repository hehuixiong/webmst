<view class="topic-res">
  <view class="header">
    <text wx:if="{{!first}}" class="prev" bindtap="prevQuestion">上一题</text>
    <text>第{{topicIndex + 1}}题</text>
    <text wx:if="{{!last}}" class="next" bindtap="nextQuestion">下一题</text>
  </view>
  <view class="topic-res-container" wx:if="{{!loading}}">
    <block>
      <view class="title">题目：{{title}}</view>
      <htmltowxml wx:if="{{topic}}" linenums="{{false}}" highlightStyle="tomorrow" highlightLanguages="{{['html','js','php','css','cpp','ruby']}}" showLoading="{{false}}" text="{{topic}}" />
      <htmltowxml wx:if="{{choice}}" linenums="{{false}}" highlightStyle="tomorrow" highlightLanguages="{{['html','js','php','css','cpp','ruby']}}" showLoading="{{false}}" text="{{choice}}" />
      <view class="difficulty">
        <view class="level">
          <text>难度：</text>
          <van-rate size="14px" readonly value="{{ level }}" />
        </view>
        <view class="time">
          <text>更新时间：{{create_time}}</text>
        </view>
      </view>
    </block>
    <view style="margin-top: 20px;"></view>
    <block wx:if="{{answerShow}}">
      <view class="analysis">答案与解析</view>
      <htmltowxml wx:if="{{answer}}" linenums="{{false}}" highlightStyle="tomorrow" highlightLanguages="{{['html','js','php','css','cpp','ruby']}}" showLoading="{{true}}" text="{{answer}}" />
      <view wx:else style="color: #999999;font-size: 12px;">正在整理中...</view>
    </block>
    <view class="footer">
      <text class="collect" bindtap="go">加入收藏</text>
      <text class="continue" wx:if="{{answerShow}}" bindtap="nextQuestion">继续答题</text>
      <text class="answer" wx:else bindtap="onShowAnswer">查看答案</text>
    </view>
  </view>
  <view class="loading" wx:else>
    <loading color="#7e68f3"></loading><text>加载中...</text>
  </view>
</view>