<view class="topic-page">
  <view class="sort-container"></view>
  <view class="topic-container">
    <view class="tc-list">
      <block wx:for="{{topicList}}" wx:key="*this">
        <view class="tc-item" bindtap="handleJump" data-index="{{index}}" data-title="{{item.title}}" data-exerciseKey="{{item.exerciseKey}}">
          <view class="tc-item__title">
            <view class="title">
              <text>第{{index + 1}}题：{{item.title}}</text>
            </view>
            <view class="tag">{{item.category === 'QA' ? '问答题' : '选择题'}}</view>
          </view>
          <view class="tc-item__desc">
            <view class="level">
              <text>难度：</text>
              <text class="star">*****</text>
            </view>
            <view class="time">
              <text>更新时间：{{item.updateAt}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>