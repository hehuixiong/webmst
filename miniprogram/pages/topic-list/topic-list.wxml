<view class="topic-page">
  <view class="sort-container"></view>
  <view class="topic-container">
    <view class="tc-list">
      <block wx:for="{{topicList}}" wx:key="index">
        <view class="tc-item" bindtap="handleJump" data-index="{{index}}" data-id="{{item.id}}" data-topicsum="{{topicSum}}">
          <view class="tc-item__title">
            <view class="title">
              <text>第{{index + 1}}题：{{item.title}}</text>
            </view>
            <view class="tag">{{type === 'choice' ? '选择题' : '问答题'}}</view>
          </view>
          <view class="tc-item__desc">
            <view class="level">
              <text>难度：</text>
              <van-rate size="14px" readonly value="{{ item.level }}" />
            </view>
            <view class="time">
              <text>更新时间：{{item.create_time}}</text>
            </view>
          </view>
        </view>
      </block>
      <view class="loading-container">
        <view class="loading" wx:if="{{loading}}">
          <loading color="#7e68f3"></loading>
          <text style="margin-left: 10rpx">加载中...</text>
        </view>
        <view wx:if="{{noMore}}">没有更多了~</view>
      </view>
    </view>
  </view>
</view>