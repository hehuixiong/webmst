<view class="home-page">
  <nav-bar id="navBar" title="前端面试题材" hideTip="{{hideTip}}" titLoading="{{titLoading}}" background='linear-gradient(#6581f6, #7e68f3)' color="#fff" bind:closeTip="closeTip"></nav-bar>
  <view class="home-swiper">
    <view class="bg"></view>
    <swiper class="swiper" indicator-dots autoplay circular interval="4000" duration="500" bindchange="swiperChange">
      <block wx:for="{{swiper}}" wx:key="index">
        <swiper-item bindtap="go">
          <view class="swiper-content">
            <image class="img {{current===index?'active':''}}" src="{{item}}"></image>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="home-notice">
    <van-notice-bar left-icon="volume-o">
      <text>截止{{currentTime}}，共录入面试题：{{pageTotal}}题 <text class="iconfont icon-huomiao"></text></text>
    </van-notice-bar>
  </view>
  <view class="home-module" wx:if="{{showgroup}}">
    <view class="module-wrapper bg1" bindtap="go">
      <view class="title">VIP专属权益</view>
      <view class="btn">了解详情</view>
      <view class="icon-wrapper">
        <view class="iconfont icon-aixin"></view>
      </view>
    </view>
    <view class="module-wrapper bg2" bindtap="addGroup">
      <view class="title">面试交流群</view>
      <view class="btn">立即加入</view>
      <view class="icon-wrapper">
        <view class="iconfont icon-yuandianda"></view>
      </view>
    </view>
  </view>
  <view class="home-container">
    <view class="hc-title">
      <text>热门分类</text>
      <view class="search-wrap" bindtap="goSearch">
        <view class="search-input">
          <text class="icon-bg">
            <text class="iconfont icon-sousuo1"></text>
          </text>
          <text class="text">搜索</text>
        </view>
      </view>
    </view>
    <view class="hc-navs">
      <block wx:for="{{navs}}" wx:key="index">
        <navigator class="nav-item" url="/pages/topic-list/topic-list?id={{item.id}}&label={{item.label}}&type={{item.type}}">
          <text class="iconfont {{item.icon}}"></text>
          <text class="text">{{item.label}}</text>
        </navigator>
      </block>
    </view>
  </view>
</view>